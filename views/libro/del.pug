extends ../templates/layout

block content
    h3 Confirmar eliminación del libro
    div 
        form( method="post")
            label(for="titulo") Título:
            input(type="text", name="titulo", value=libro.titulo, disabled)
            br
            label(for="fecha_publicacion") Fecha de publicación:
            input(type="text", name="fecha_publicacion", value=libro.fecha_publicacion, disabled)
            br
            label(for="precio") Precio:
            input(type="number", name="precio", value=libro.precio, disabled, step="0.01", min="0", max="1000")
            br
            input(type="hidden", name="id_libro", value=libro.id_libro)
            br
            button(type="submit" class="btn btn-danger") Confirmar eliminación
            a(href="/libro" class="btn btn-secondary") Cancelar
