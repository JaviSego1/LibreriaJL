extends ../templates/layout

block content 
    .container
        h3.mb-4 Editar autor
        .row.justify-content-center
            .col-md-6
                form(method="post") 
                    .mb-3
                        label.form-label(for="nombre") Nombre:
                        input.form-control(type="text", name="nombre", value=autor.nombre)
                    .mb-3
                        label.form-label(for="pais") Pais:
                        input.form-control(type="text", name="pais", value=autor.pais)
                    .mb-3
                        input.form-control(type="hidden", name="id_autor", value=autor.id_autor)
                    .mb-3
                        button.btn.btn-primary(type="submit") Guardar cambios

            